<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/silver_plan"
    android:layout_gravity="center_vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/curve_bottomheet_popup"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@android:color/transparent"
            android:text="Enter Card Information"
            android:textSize="18sp"
            android:fontFamily="@font/opensansbold"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_margin="10dp"
            android:background="@drawable/curve_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:text="Cardholder Name"
                    android:textSize="13sp"
                    android:fontFamily="@font/opensanssemibold"
                    android:textStyle="bold"
                    android:textColor="@color/dark_yellow"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/login_name"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_name"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="5dp"
                        android:hint="Name"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:inputType="textPersonName"
                        android:fontFamily="@font/opensansmedium"
                        android:textColorHint="@color/grey"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:text="Card Number"
                    android:textSize="13sp"
                    android:fontFamily="@font/opensanssemibold"
                    android:textStyle="bold"
                    android:textColor="@color/dark_yellow"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/number"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_number"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="5dp"
                        android:hint="Card Number"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:inputType="number"
                        android:fontFamily="@font/opensansmedium"
                        android:textColorHint="@color/grey"
                        android:maxLength="16"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:text="CVV"
                            android:textSize="13sp"
                            android:fontFamily="@font/opensanssemibold"
                            android:textStyle="bold"
                            android:textColor="@color/dark_yellow"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:background="@android:color/transparent">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/card_cvv"
                                android:gravity="center"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:hint="CVV"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="normal"
                                android:inputType="number"
                                android:fontFamily="@font/opensansmedium"
                                android:textColorHint="@color/grey"
                                android:maxLength="3"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:text="Exp Month"
                            android:textSize="13sp"
                            android:fontFamily="@font/opensanssemibold"
                            android:textStyle="bold"
                            android:textColor="@color/dark_yellow"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:background="@android:color/transparent">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/card_exp_month"
                                android:gravity="center"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:hint="Month"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="normal"
                                android:inputType="number"
                                android:fontFamily="@font/opensansmedium"
                                android:textColorHint="@color/grey"
                                android:maxLength="2"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@android:color/transparent"
                            android:text="Exp Year"
                            android:textSize="13sp"
                            android:fontFamily="@font/opensanssemibold"
                            android:textStyle="bold"
                            android:textColor="@color/dark_yellow"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:background="@android:color/transparent">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/card_exp_year"
                                android:gravity="center"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:hint="Year"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="normal"
                                android:inputType="number"
                                android:fontFamily="@font/opensansmedium"
                                android:textColorHint="@color/grey"
                                android:maxLength="4"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_btn_submit"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/dark_yellow_curved_gradient"
                    android:text="submit"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp">

        <LinearLayout
            android:id="@+id/lay_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_side_right_corner"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_margin="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:fontFamily="@font/opensans_medium"
                android:paddingLeft="20dp"/>


        </LinearLayout>
        <TextView
            android:id="@+id/txt_out_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="01:21"
            android:textSize="10dp"
            android:textColor="@color/grey"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_side_left_corner"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:fontFamily="@font/opensans_medium"
                android:paddingLeft="20dp"/>


        </LinearLayout>
        <TextView
            android:id="@+id/txt_in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:text="01:21"
            android:textSize="10dp"
            android:textColor="@color/grey"/>

    </LinearLayout>


</LinearLayout>
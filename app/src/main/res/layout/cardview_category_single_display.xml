<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crd_cat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="false">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/card_single_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Razorpay "
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/opensans_semibold"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_des"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Power your finance.grow your business"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_medium"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/curve_bottom"
                android:weightSum="2"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_loc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Bangalore"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_medium"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/txt_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorWhite"
                    android:text="Technology"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_medium" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
           android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:strokeColor="@color/grey"
                android:elevation="2dp"
                app:cardCornerRadius="20dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/card_sub_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>
</LinearLayout>